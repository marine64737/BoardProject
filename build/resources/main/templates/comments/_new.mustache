{{#username}}
    <form action="/board/{{post.id}}/view" method="post">
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">아이디</label>
            <h3 class="username">{{username}}</h3>
        </div>
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">내용</label>
            <textarea type="text" class="form-control" id="new-comment-body" rows="5"></textarea>
        </div>
        <input type="hidden" class="form-control" id="new-comment-article-id" value="{{post.id}}">
        <button class="btn btn-primary" type="button" id="comment-create-btn">댓글 작성</button>
    </form>
{{/username}}