<div id="comments-list">
    {{#commentForms}}
        <div class="card m-2" id="comments-{{id}}-box">
            <div class="card m-2" id="comments-{{id}}">
                <div class="card-header d-flex justify-content-between">
                    <div hidden class="id">{{id}}</div>
                    <div class="username">{{username}}</div>
                    <div class="commentdate">{{commentdate}}</div>
                    <div hidden class="articleId">{{articleId}}</div>
                </div>
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div><p class="card-text">{{comment}}</p></div>
                    <div>
                        <button class="edit-btn btn btn-primary me-md-2" type="button" id="comment-modify-btn" data-comment-id="{{id}}">수정</button>
                        <button class="btn btn-primary" type="button" id="comment-delete-btn" data-comment-id="{{id}}">삭제</button>
                    </div>
                </div>
            </div>
        </div>
    {{/commentForms}}
</div>