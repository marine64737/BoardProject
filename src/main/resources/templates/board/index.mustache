{{>layouts/header}}
<div class="container">
    <form>
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">번호</th>
                <th scope="col">제목</th>
                <th scope="col">작성자</th>
                <th scope="col">작성 날짜</th>
            </tr>
            </thead>
            <tbody>
            {{#articles}}
            <tr>
                <th scope="row">{{id}}</th>
                <td><a href="/board/{{id}}/view">{{title}}</td>
                <td>{{username}}</td>
                <td>{{postdate}}</td>
            </tr>
            {{/articles}}
            </tbody>
        </table>
        {{#prevPage}}
        <a class="btn btn-primary" href="/?page={{prevPage}}" role="button">이전</a>
        {{/prevPage}}
        {{currentPage}}/{{totalPages}}
        {{#nextPage}}
            <a class="btn btn-primary" href="/?page={{nextPage}}" role="button">다음</a>
        {{/nextPage}}
        {{#username}}
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a class="btn btn-primary" href="/board/new" role="button">글쓰기</a>
        </div>
        {{/username}}
    </form>

</div>
{{>layouts/footer}}